#include <stdio.h>

void main() {
	int N;
	scanf("%d", &N);
	for (int i = 1; i < N + 1; i++) {
		if (i == 1) {
			for (int j = 1; j < N + 1; j++) {
				printf("%s", "*");
			}
		}
		else if (i == N) {
			printf("\n");
			for (int j = 1; j < N + 1; j++) {
				printf("%s", "*");
			}
		}
		else {
			printf("\n*");
			for (int i = 2; i < N; i++) printf(" ");
			printf("*");
		}

	}
}
